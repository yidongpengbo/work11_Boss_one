<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_312"
    android:background="@drawable/fragment_list_recycler"
    >
    <TextView
        android:id="@+id/CommentOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="订单号"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/CommentOrderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/CommentOrder"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/Comment"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/home_btn_moer_pink_n"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/CommentSecondRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/CommentOrderCode"
        android:layout_above="@id/CommentTime"
        ></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/CommentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="qwerty"
        />

</RelativeLayout>

