<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="312dp"
    android:layout_height="@dimen/dp_118"
    android:layout_marginBottom="@dimen/dp_10"
    android:shadowColor="#999999"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="0.5"
    android:background="@drawable/home_shop"
    >
    <ImageView
        android:id="@+id/Fation_Image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_98"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/Fation_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:layout_toRightOf="@id/Fation_Image"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/Fation_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/Fation_Image"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>