<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    >
    <ImageView
        android:id="@+id/phone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/login_icon_phone_n_hdpi"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:id="@+id/Regist_Number"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_180"
        android:hint="手机号"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/Login"
        android:paddingBottom="@dimen/dp_10"
        android:background="@null"
        android:inputType="number"
        />
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/Regist_Number"
        android:layout_marginLeft="@dimen/dp_36"
        android:background="@drawable/phone"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/verification"
        android:layout_below="@id/Regist_Number"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/Code"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:hint="验证码"
        android:background="@null"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/Regist_Number"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/Login"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/Login"
        android:layout_below="@id/Regist_Number"
        android:layout_toRightOf="@id/Regist_Number"
        android:layout_marginTop="@dimen/dp_25"
        />
    <View
        android:id="@+id/view_code"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/Code"
        android:background="@color/Login"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_icon_lock_n_hdpi"
        android:layout_below="@id/view_code"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/Regist_Password"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:hint="登录密码"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/Login"
        android:background="@null"
        android:layout_below="@id/view_code"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/lock"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <ImageView
        android:id="@+id/Regist_Eye"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/login_icon_eye_n_hdhpi"
        android:layout_toRightOf="@id/Regist_Password"
        android:layout_below="@id/view_code"
        android:layout_marginTop="@dimen/dp_20"
        />
    <View
        android:id="@+id/view_eye"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Login"
        android:layout_below="@id/Regist_Password"
       android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <TextView
        android:id="@+id/Regist_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账户？立即登陆"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/Login"
        android:layout_below="@id/view_eye"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/Regist"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_125"
        android:background="@drawable/button_login"
        android:text="注册"
        android:layout_alignParentBottom="true"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18"
        />
</RelativeLayout>