<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--TODO:头像、名字、时间-->
    <RelativeLayout
        android:id="@+id/First_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/Find_Head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/Find_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/Find_Head"
            />
        <TextView
            android:id="@+id/Find_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"

            />

    </RelativeLayout>
    <!--TODO:内容-->
    <RelativeLayout
        android:id="@+id/Second_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/First_Horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/Find_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <!--TODO:图片-->
    <RelativeLayout
        android:id="@+id/Third_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Second_Horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/Find_Picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140" />

    </RelativeLayout>
    <!--点赞-->
    <RelativeLayout
        android:id="@+id/Fourth_Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Third_Horizontal"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/Image_Thumbs"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/common_btn_prise_n"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/Thumbs_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/Image_Thumbs"
            android:layout_marginLeft="@dimen/dp_10"
            />

    </RelativeLayout>


</RelativeLayout>