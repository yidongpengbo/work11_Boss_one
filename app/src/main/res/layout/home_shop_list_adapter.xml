<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_151"
    android:layout_height="@dimen/dp_174"
   android:background="@drawable/home_list"
    android:shadowColor="@color/Login"
    android:shadowDx="4"
    android:shadowDy="4"
    android:shadowRadius="0.5"
    android:layout_marginBottom="@dimen/dp_10"
    >

    <ImageView
        android:id="@+id/Shop_Image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
         />
    <TextView
        android:id="@+id/Shop_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Shop_Image"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/Shop_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:layout_below="@id/Shop_Title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/Shop_Sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:layout_below="@id/Shop_Title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#666"
        />
</RelativeLayout>