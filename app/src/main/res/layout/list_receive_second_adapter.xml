<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_97">
    <ImageView
        android:id="@+id/receiveSecondImage"
        android:layout_width="@dimen/dp_81"
        android:layout_height="81dp"
        android:layout_margin="@dimen/dp_10"

        />
    <TextView
        android:id="@+id/receiveSecondName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/receiveSecondImage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:lines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/receiveSecondPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/receiveSecondImage"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="#f00"
        />
</RelativeLayout>