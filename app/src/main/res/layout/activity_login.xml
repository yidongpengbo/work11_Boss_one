<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/Login_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_60"
        />

    <RadioGroup
        android:id="@+id/Radio_Group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/rectangle6"

        >
        <RadioButton
            android:id="@+id/Radio_Home"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/login_home"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_32"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/Radio_Find"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:background="@drawable/login_find"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            />
        <RadioButton
            android:id="@+id/Radio_Shop_Car"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:button="@null"
            android:background="@mipmap/commom_tab_btn_shopping_cart_n"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            />
        <RadioButton
            android:id="@+id/Radio_List"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_list"
            android:layout_marginLeft="@dimen/dp_36"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            />
        <RadioButton
            android:id="@+id/Radio_Main"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:background="@drawable/login_main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RadioGroup>
</RelativeLayout>