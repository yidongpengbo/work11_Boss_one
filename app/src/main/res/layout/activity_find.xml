<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/Find_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的圈子"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/Find_Delete"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/common_btn_delete_n"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/Find_XRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_below="@id/Find_Delete"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/Find_Release"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:text="您还未发布圈子，点击发布"
        android:textSize="@dimen/sp_16"
        android:textColor="#f00"
       android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:visibility="invisible"
        />
</RelativeLayout>