<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_310"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/find_address_adapter"
    >
    <TextView
        android:id="@+id/AddresseeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/AddresseePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_22"
        />
    <TextView
        android:id="@+id/AddresseeDetailedAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_below="@id/AddresseeName"
        android:layout_marginTop="@dimen/dp_10"
        />
    <View
        android:id="@+id/AddresseeView"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/AddresseeDetailedAddress"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f2f2f2"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <CheckBox
        android:id="@+id/AddresseeDefault"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:text="设为默认地址"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_below="@id/AddresseeView"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        />
    <Button
        android:id="@+id/AddresseeUpdate"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"
        android:text="修改"
        android:textSize="@dimen/sp_10"
        android:background="@drawable/address_adapter_button"
        android:layout_below="@id/AddresseeView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/AddresseeDelete"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"
        android:text="删除"
        android:textSize="@dimen/sp_10"
        android:background="@drawable/address_adapter_button"
        android:layout_below="@id/AddresseeView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
</RelativeLayout>