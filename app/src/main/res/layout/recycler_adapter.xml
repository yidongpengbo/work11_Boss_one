<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="105dp"
    android:layout_height="@dimen/dp_166"
    android:layout_marginRight="@dimen/dp_10"
    android:gravity="center_horizontal"
    android:shadowColor="@color/Login"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="0.5"
    android:background="@drawable/home_shop"
    >

    <ImageView
        android:id="@+id/Hot_Image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_99"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/Hot_Title"
        android:layout_width="@dimen/dp_85"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#666"
        android:singleLine="true"
        android:layout_below="@id/Hot_Image"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/Hot_Price"
        android:layout_width="@dimen/dp_65"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#f00"
        android:layout_below="@id/Hot_Title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
</RelativeLayout>